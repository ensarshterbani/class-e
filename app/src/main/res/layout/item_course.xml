<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Non-expandable section -->
        <TextView
            android:id="@+id/courseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Name"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/professorProfileImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_profile_with_border"
                android:contentDescription="Professor Profile Image"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/professorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professor Name"
                android:textAppearance="?attr/textAppearanceSubtitle1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/assistantProfessorProfileImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_profile_with_border"
                android:contentDescription="Assistant Professor Profile Image"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/assistantProfessorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assistant Professor Name"
                android:textAppearance="?attr/textAppearanceSubtitle1" />
        </LinearLayout>

        <TextView
            android:id="@+id/courseIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course ID"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/academicYearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Academic Year"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/numberOfStudentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Students Enrolled"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/enrolledStudentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Students"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <!-- Expandable section -->
        <LinearLayout
            android:id="@+id/expandableSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="16dp">

            <TableLayout
                android:id="@+id/gradingSchemeTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:stretchColumns="1"
                android:background="@drawable/table_border">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Points"
                        android:textStyle="bold"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Grade"
                        android:textStyle="bold"
                        android:gravity="center" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/assignmentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Assignments"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/assignmentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>